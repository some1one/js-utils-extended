{
  "extends": "rollpkg/configs/tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
  ],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "outDir": "dist",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "isolatedModules": false,
    "baseUrl": ".",
    "declaration": true,
    "lib": ["esnext"],
    "types": ["lodash", "typescript-util-types"]
  }
}